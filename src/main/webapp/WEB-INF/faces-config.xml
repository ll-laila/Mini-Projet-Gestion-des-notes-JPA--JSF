<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="3.0" xmlns="https://jakarta.ee/xml/ns/jakartaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                                  https://jakarta.ee/xml/ns/jakartaee/web-facesconfig_3_0.xsd">


    <managed-bean>
        <managed-bean-name>LoginBean</managed-bean-name>
        <managed-bean-class>com.example.projet_gestionecole.Controller.LoginBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>AdminBean</managed-bean-name>
        <managed-bean-class>com.example.projet_gestionecole.Controller.AdminBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>EnseignantBean</managed-bean-name>
        <managed-bean-class>com.example.projet_gestionecole.Controller.EnseignantBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>EtudiantBean</managed-bean-name>
        <managed-bean-class>com.example.projet_gestionecole.Controller.EtudiantBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>auth</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>Admin</from-outcome>
            <to-view-id>/pages/admin/Admin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>InscriptionAdmin</from-outcome>
            <to-view-id>/InscriptionAdmin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>GestionEtudiants</from-outcome>
            <to-view-id>/pages/admin/GestionEtudiants.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>GestionEnseignants</from-outcome>
            <to-view-id>/pages/admin/GestionEnseignants.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>GestionModules</from-outcome>
            <to-view-id>/pages/admin/GestionModules.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>AjoutEtudiant</from-outcome>
            <to-view-id>/pages/admin/AjoutEtudiant.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>AjoutEnseignant</from-outcome>
            <to-view-id>/pages/admin/AjoutEnseignant.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>AjoutModule</from-outcome>
            <to-view-id>/pages/admin/AjoutModule.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>Etudiant</from-outcome>
            <to-view-id>/pages/etudiant/Etudiant.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>Enseig</from-outcome>
            <to-view-id>/pages/enseig/Enseig.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>GestionNotes</from-outcome>
            <to-view-id>/pages/enseig/GestionNotes.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>EtudiantsList</from-outcome>
            <to-view-id>/pages/enseig/EtudiantsList.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>AjoutNote</from-outcome>
            <to-view-id>/pages/enseig/AjoutNote.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


</faces-config>